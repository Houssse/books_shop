<%= form_with model: @product do |f| %>
  
  <div>
    <%= f.label :title, style: "display: block" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :summary, style: "display: block" %>
    <%= f.text_area :summary %>
  </div>

  <div>
    <%= f.label :price, style: "display: block" %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>